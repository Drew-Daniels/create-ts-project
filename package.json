{
  "name": "ts-project",
  "description": "Utility to easily scaffold a new TS project",
  "version": "0.1.0",
  "author": "Drew Daniels",
  "bugs": "https://github.com/Drew-Daniels/ts-project/issues",
  "keywords": [
    "typescript",
    "ts"
  ],
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "bin": {
    "create-ts-project": "dist/index.js"
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "^9.2.0",
    "@eslint/js": "^9.33.0",
    "@types/lodash": "^4.17.20",
    "cspell": "^9.2.0",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "jiti": "^2.5.1",
    "prettier": "3.6.2",
    "ts-node": "^10",
    "typescript": "^5",
    "typescript-eslint": "^8.39.1"
  },
  "homepage": "https://github.com/Drew-Daniels/ts-project",
  "license": "MIT",
  "type": "module",
  "repository": "Drew-Daniels/ts-project",
  "scripts": {
    "dev": "tsc --watch",
    "dev:clean": "rm -rf dist && tsc --watch",
    "clean": "rm -rf dist",
    "build": "tsc --build && cp src/*.toml dist/ && cp src/flake* dist/ && cp src/.envrc dist/.envrc",
    "build:clean": "npm run clean && npm run build",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier 'src/**/*.ts'",
    "format:write": "prettier 'src/**/*.ts' --write"
  },
  "dependencies": {
    "lodash": "^4.17.21",
    "ora": "^8.2.0"
  }
}
